{
  "compilerOptions": {
    "moduleResolution": "Node",
    "lib": ["dom", "dom.iterable", "ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@*": ["./*"]
    },
    "noResolve": false,
    "skipLibCheck": true,
    "jsx": "preserve",
    "incremental": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "tsc-alias": {
    "verbose": false,
    "resolveFullPaths": true,
    "fileExtensions": {
      "inputGlob": "{js,jsx,mjs}",
      "outputCheck": ["js", "json", "jsx", "mjs"]
    }
  },
  "include": ["**/*.ts", "**/*.js", "**/*.json", "**/*.jsx", "**/*.tsx"],
  "exclude": ["node_modules"]
}
